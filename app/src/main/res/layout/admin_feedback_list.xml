<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="40dp"
    android:background="@drawable/pd_bg"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/adminFbName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/tvname"
        app:layout_constraintTop_toTopOf="parent"/>

    <RatingBar
        android:id="@+id/adminrating"
        style="@style/MyRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="4"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:focusable="false"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvoderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID :"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/adminFbName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/adminFbOrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234812481"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tvoderid"
        app:layout_constraintTop_toBottomOf="@+id/adminFbName"/>

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="The Feed back is here"
        android:focusable="false"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:gravity="start|top"
        android:padding="8dp"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminFbOrderID"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>